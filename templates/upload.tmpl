{{define "body"}}
	<body>
		<div class="container">
			<h1>&#127821; Metadata Hub</h1>
			{{ template "nav" . }}
			<h2>Upload a source file</h2>
			{{ if .Flashes }}
				{{ range .Flashes}}
					<div class="alert alert-info" role="alert">{{ . }}</div>
				{{ end }}
			{{ end }}

			<p><em>Accepted files are : <mark>.xml</mark> (as exported from SFX); <mark>.csv</mark> (if a csv configuration exists for the target service); <mark>.kbart</mark><br />
			Please discard the 1st line in your .csv or .kbart file if it's a header</em></p>

			<form class="form-horizontal" enctype="multipart/form-data" action="/upload" method="post">

				<div class="form-group">
					<fieldset>
						<legend>Target Service (package)</legend>
						{{ range .TSListing }}
							<label class="radio-inline" for="{{ .TSName }}">
								<input  type="radio" name="pack" value="{{ .TSName }}"> {{ .TSDisplayName }}
							</label>
						{{ end }}
					</fieldset>
				</div>
			
				<div class="form-group">
					<input type="file" name="uploadfile" />
					<input type="hIDden" name="token" value="{{.}}"/>							
				</div>

				<button type="submit" class="btn btn-default" value="upload" >Upload</button>

			</form>
		</div>
	</body>
{{end}}