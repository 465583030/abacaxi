{{define "body"}}
	<body>
		<div class="container">
			<h1>&#127821; Metadata Hub</h1>
			{{template "nav" .}}
			<h2>Package : {{ .myPackage }}</h2>
			<ul>
				<li>{{ .myPackageEbooksCount }} ebooks</li>
				<li>number of ebooks with Marc Records : {{ .myPackageRecordsUnimarcCount }} / {{ .myPackageEbooksCount }}</li>
				<li>number of ebooks with Pica Publication Numbers : {{ .myPackagePPNsCount }} / {{ .myPackageEbooksCount }}</li>
				<li>{{ if .IsTSActive }}<span class="label label-success">Active</span>{{ else }}<span class="label label-danger">Inactive</span>{{ end }}</li>
			</ul>
			<p>
				<a class="btn btn-default" href="/sudoci2p-ts-new/{{ .myPackage }}" role="button">Get New PPNs</a>
				{{ if .myPackagePPNsCount }} 
					<a class="btn btn-default" href="/sudocgetrecords/{{ .myPackage }}" role="button">Get Unimarc Records</a>
				{{ end }}
			</p>


			{{ template "recordslist" . }}

		</div>
	</body>
{{end}}