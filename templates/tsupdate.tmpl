{{define "body"}}
	<body>
		<div class="container">

			<h1>&#127821; Metadata Hub</h1>

			{{ template "nav" . }}

			<h2>Update {{ .myTS.DisplayName }}</h2>

			{{ if .ErrTSUpdate }}
				<p class="bg-danger">{{ .ErrTSUpdate }}</p>
			{{ end }}

			<form class="form-horizontal" action="/ts/update/{{ .myTS.TSName }}" method="post">
				<input type="hidden" name="tsname" value="{{ .myTS.TSName }}">
				<div class="form-group">
					<label for="tsdisplayname" class="col-sm-2 control-label">Display name: </label>
					<div class="col-sm-10">
						<input type="text" class="form-control" name="tsdisplayname" value="{{ .myTS.DisplayName }}">
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<button type="submit" class="btn btn-default" value="Submit">Submit</button>
					</div>
				</div>
			</form>

		</div>
	</body>
{{end}}