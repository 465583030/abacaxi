{{define "head"}}
<html>
	<head>
		<meta charset="utf-8" /> 
		<title>&#9973; Hub de métadonnées!</title>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.3/jquery.min.js"></script>
		
	</head>
{{end}}

{{define "body"}}
	<body>
		<h1>&#9973; Hub de métadonnées</h1>
		<h2>Upload d'un fichier source (xlm sfx ou csv éditeur)</h2>
		<form enctype="multipart/form-data" action="http://localhost:8080/upload" method="post">
			<fieldset>
				<legend>Package</legend>
				<input type="radio" name="pack" value="cyberlibris"> <label for="cyberlibris">Cyberlibris</label>
				<input type="radio" name="pack" value="blabla"> <label for="blabla">Blabla package</label>
			</fieldset>
			<input type="file" name="uploadfile" />
			<input type="hidden" name="token" value="{{.}}"/>
			<input type="submit" value="upload" />
		</form>
		{{ template "packagesListingShort" }}		
	</body>
{{end}}